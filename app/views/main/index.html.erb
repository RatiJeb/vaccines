<div class="row">
  <h1><%= I18n.t('web.main.header') %></h1>
</div>
<br />
<div class="row">
  <h4></h4>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @vaccine_items.each do |item| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><strong><%= item.name %></strong><h5>
          <p class="card-text"><%= item.description %></p>
          <%= link_to I18n.t('web.main.register_text'), current_step_path(vaccine_pathname(item)), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>