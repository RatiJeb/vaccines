<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.booking.header') %></h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= I18n.t('admin.booking.vaccine_name') %></th>
              <th><%= I18n.t('admin.booking.guid') %></th>
              <th><%= I18n.t('admin.booking.pin') %></th>
              <th><%= I18n.t('admin.booking.step') %></th>
              <th><%= I18n.t('admin.booking.created_at') %></th>
              <th><%= I18n.t('admin.booking.ip_address') %></th>
              <th><%= I18n.t('admin.booking.browser_name') %></th>
              <th><%= I18n.t('admin.booking.os_name') %></th>
              <th><%= I18n.t('admin.booking.edit_patient') %></th>
            </tr>
          </thead>

          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td class="align-middle"><%= booking.vaccine.name %></span></td>
                <td class="align-middle"><%= booking.guid %></td>
                <td class="align-middle"><%= booking.patient&.pin %></td>
                <td class="align-middle"><%= booking.step_state %></td>
                <td class="align-middle"><%= booking.created_at %></td>
                <td class="align-middle"><%= booking.ip_address %></td>
                <td class="align-middle"><%= booking.browser_name %></td>
                <td class="align-middle"><%= booking.os_name %></td>
                <td class="align-middle"><%= link_to 'Patient', edit_admin_patient_path(booking.patient) if booking.patient&.pin %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy)%>
      </div>
    </div>
  </div>
</div>