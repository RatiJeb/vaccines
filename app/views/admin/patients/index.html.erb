<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.patient.header') %></h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= I18n.t('admin.patient.first_name') %></th>
              <th><%= I18n.t('admin.patient.last_name') %></th>
              <th><%= I18n.t('admin.patient.birth_date') %></th>
              <th><%= I18n.t('admin.patient.pin') %></th>
              <th><%= I18n.t('admin.patient.non_resident') %></th>
              <th><%= I18n.t('admin.patient.mobile_phone') %></th>
              <th><%= I18n.t('admin.patient.email') %></th>
              <th><%= I18n.t('admin.patient.created_at') %></th>
              <th><%= I18n.t('admin.patient.updated_at') %></th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td class="align-middle"><%= patient.first_name %></span></td>
                <td class="align-middle"><%= patient.last_name %></td>
                <td class="align-middle"><%= patient.birth_date %></td>
                <td class="align-middle"><%= patient.pin %></td>
                <td class="align-middle"><%= patient.non_resident %></td>
                <td class="align-middle"><%= patient.mobile_phone %></td>
                <td class="align-middle"><%= patient.email %></td>
                <td class="align-middle"><%= patient.created_at %></td>
                <td class="align-middle"><%= patient.updated_at %>
                <td class="align-middle"><%= link_to 'Edit', edit_admin_patient_path(patient) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy)%>
      </div>
    </div>
  </div>
</div>